%!PS-Adobe-3.0
%%Title: A1 Chessboard - 12x8 - 6cm Squares
%%Orientation: Portrait
%%DocumentMedia: A1 1684 2384 80 () ()
%%Pages: 1
%%EndComments
%%EndProlog
%%BeginSetup
  % A1, unrotated
  << /PageSize [1684 2384] /Orientation 0 >> setpagedevice
%%EndSetup
%%Page: 1 1
%%BeginPageSetup
%%EndPageSetup
  /pagewidth 1684 def
  /pageheight 2384 def 

  % ----- Define centimeter
  /cm {28.346 mul} def
  % ----- square width
  /w {6 cm} def
  /ww {w 2 mul} def
  /www {w 3 mul} def
  /r {w 2 div} def
  % ----- Define procedure for drawing a box
  /box {w 0 rlineto 0 w rlineto -1 w mul 0 rlineto closepath} def

  % take in account the size of a square
  /pagewidth pagewidth w sub def
  /pageheight pageheight ww sub def

  % draw all the boxes it can across a single row
  /rowboxes {ww pagewidth {newpath y moveto box fill} for} def

  % increments the y variable and draws all the rows
  w ww pageheight { /y exch def w rowboxes } for
  ww ww pageheight { /y exch def ww rowboxes } for

  showpage
%%Trailer
%%EOF
